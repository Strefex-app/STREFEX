# ── Supabase (primary backend) ────────────────────────────
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# ── Superadmin (client-side safeguard) ───────────────────
# Primary auth password is managed in Supabase Auth user settings.
# This value prevents non-STREFEX emails from being treated as superadmin in UI.
VITE_SA_EMAIL=STREFEX@strfgroup.ru
# Legacy fallback only (not used by Supabase sign-in flow):
# VITE_SA_PASS_HASH=base64-encoded-password

# ── API (legacy FastAPI backend) ─────────────────────────
# Use your deployed backend URL in production, e.g.:
# VITE_API_BASE_URL=https://api.yourdomain.com/api/v1
# If omitted, frontend uses relative /api/v1 (same-origin).
# VITE_API_BASE_URL=http://localhost:8000/api/v1

# ── Preview login (dev/demo only) ───────────────────────
# Set to "true" to enable the "Preview Platform" button on the login page
# VITE_PREVIEW_LOGIN_ENABLED=true

# ── Firebase (optional — Supabase is preferred) ──────────
# VITE_FIREBASE_API_KEY=your-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
# VITE_FIREBASE_APP_ID=1:000000000000:web:xxxxxxxxxxxxxx

# ── Stripe ─────────────────────────────────────────────────
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx
# VITE_STRIPE_PRICING_TABLE_ID=prctbl_xxxxxxxxxxxxxxxxxxxx

# ── Firebase Emulator (dev only) ──────────────────────────
# VITE_FIREBASE_USE_EMULATOR=true

# ── Sentry Error Tracking ──────────────────────────────────
# VITE_SENTRY_DSN=https://xxxx@oXXXX.ingest.sentry.io/XXXX

# ── Mixpanel Analytics ─────────────────────────────────────
# VITE_MIXPANEL_TOKEN=your-mixpanel-project-token
